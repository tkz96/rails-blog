<div>
  <img src='https://unsplash.com/photos/F_-0BxGuVvo' alt="user_image">
</div>

<div>
  <p><%= @user.name %></p>
  <p>Number of posts: <%= @user.posts_counter %></p>
</div>

<div>
  <p>Posts: </p>
  <% @user.posts.each do |post| %>
    <div>
      <h3><%= post.title %></h3>
      <br>
      <%= post.text %>
      <p>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
    </div>
  <% end %>
</div>